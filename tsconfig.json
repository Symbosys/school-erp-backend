{
  "compilerOptions": {
    /* Output */
    "rootDir": "./src",
    "outDir": "./public",
    /* Language & runtime */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "ES2020"
    ],
    /* Module resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,
    /* Type safety */
    "strict": true,
    "skipLibCheck": true,
    /* Emit */
    "noEmit": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}